{
	"manifest_version": 3,
	"name": "Hide AI Slop",
	"description": "Extension to hide AI Slop",
	"version": "1.10",
	"icons": {
		"48": "src/icons/48x-hide-ai-slop-extension.png",
		"128": "src/icons/128x-hide-ai-slop-extension.png"
	},
	"background": {
		"service_worker": "src/hide-ai-slop-extension-background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.youtube.com/*",
				"https://*.google.com/*",
				"https://*.google.co.uk/*",
				"https://*.google.ca/*",
				"https://*.google.de/*",
				"https://*.google.fr/*",
				"https://*.google.nl/*",
				"https://mail.google.com/mail/*"
			],
			"js": ["src/hide-ai-slop-extension.js"],
			"run_at": "document_end"
		}
	],
	"permissions": ["storage"],
	"action": {
		"default_popup": "src/hide-ai-slop-extension.html",
		"default_icon": {
			"128": "src/icons/128x-hide-ai-slop-extension.png"
		}
	}
}
